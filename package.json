{
  "name": "@smartlyio/oats",
  "version": "2.17.0",
  "license": "MIT",
  "description": "Openapi3 based generator for typescript aware servers and clients",
  "private": false,
  "author": "Smartly.io",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "reinstall": "rm -rf node_modules && yarn",
    "clean": "lerna exec --no-private --concurrency 4 -- yarn clean",
    "tsc": "tsc",
    "pretest": "yarn build",
    "test": "jest --coverage --forceExit",
    "test:watch": "jest --watch",
    "eslint": "eslint --max-warnings=0 --ext .js,.jsx,.ts,.tsx '**/*.{ts,js,tsx,jsx}'",
    "prelint": "yarn build",
    "lint": "yarn run eslint && yarn run tsc",
    "render": "lerna exec --no-private --concurrency 4 -- yarn render",
    "build": "lerna exec --no-private --concurrency 4 -- yarn build",
    "ci:install": "yarn install --frozen-lockfile --link-duplicates --silent",
    "preci:test": "yarn ci:build",
    "ci:test": "yarn test",
    "ci:build": "yarn run --silent build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smartlyio/oats.git"
  },
  "keywords": [
    "oats",
    "openapi3",
    "rest",
    "generator",
    "typescript",
    "server",
    "client"
  ],
  "devDependencies": {
    "lerna": "^4.0.0",
    "ts-node": "10.2.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "test/.*\\.spec.ts$",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "preset": "ts-jest",
    "testMatch": null
  }
}
