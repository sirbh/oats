{
  "name": "@smartlyio/oats-koa-adapter",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Koa adapter for Oats",
  "private": false,
  "author": "Smartly.io",
  "main": "dist/koa.js",
  "types": "dist/koa.d.ts",
  "scripts": {
    "build": "rm -rf ./dist/* && rm -f ./tmp/*.ts && yarn lint && yarn tsc",
    "lint": "tslint -c tslint.json --project package.json",
    "fix": "tslint --fix -c tslint.json --project package.json",
    "prepublish": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smartlyio/oats.git"
  },
  "peerDependencies": {
    "@types/koa": "^2.0.39",
    "@types/koa-router": "^7.0.23",
    "koa": "^2.3.0",
    "koa-body": "^4.0.4",
    "koa-router": "^7.2.1",
    "@smartlyio/oats-runtime": "^1.0.0"
  },
  "keywords": [
    "oats",
    "koa",
    "openapi3",
    "rest",
    "generator",
    "typescript",
    "server",
    "client"
  ],
  "devDependencies": {
    "@types/koa": "2.0.50",
    "@types/koa-router": "^7.0.23",
    "@types/lodash": "^4.14.140",
    "@types/node": "^11.11.3",
    "jest": "^24.5.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.0",
    "ts-node-dev": "^1.0.0-pre.24",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.6.3"
  },
  "jest": {
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "testRegex": "test/.*\\.spec.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
